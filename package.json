{
  "name": "purple-adblock",
  "version": "2.5.4",
  "description": "An adblocker for the Twitch.tv using server side signature and local m3u8 manipulation",
  "scripts": {
    "preinstall": "node cli/preinstall.js",
    "dev": "set NODE_ENV=development&& npm run worker:dev --prefix serviceWorker && concurrently \"npm run chrome:build && npm run firefox:build\" \"npm run userscript:build\"",
    "build": "set NODE_ENV=production&& npm run worker:prod --prefix serviceWorker && concurrently \"npm run chrome:build && npm run firefox:build\" \"npm run userscript:build\"",
    "chrome:build": "node cli/chrome_builder.js",
    "firefox:build": "node cli/firefox_builder.js",
    "publish": "node cli/firefox_publish.mjs --input-type=module && node cli/chrome_publish.mjs --input-type=module",
    "userscript:build": "node platform/tampermonkey/build.js",
    "lint-staged": "lint-staged",
    "lint": "eslint --ext .js,.ts && prettier --write **/*.{js,ts,css,html} --ignore-path .gitignore"
  },
  "repository": "https://github.com/arthurbolsoni/Purple-adblock.git",
  "author": "kingarthur",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/arthurbolsoni/Purple-adblock/issues"
  },
  "homepage": "https://github.com/arthurbolsoni/Purple-adblock#readme",
  "pre-commit": [
    "pre-commit"
  ],
  "lint-staged": {
    "*.{ts,js,html,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "archiver": "^5.3.1",
    "concurrently": "^7.4.0",
    "dotenv": "^16.0.3",
    "eslint": "^7.9.0",
    "fs-extra": "^10.1.0",
    "lint-staged": "^12.2.2",
    "prettier": "^2.5.1",
    "sign-addon": "^5.1.0",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.4.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "m3u8-parser": "^6.0.0"
  }
}